{
    "name": "shergela/laravel-validation-rule",
    "description": "Build custom validation rules",
    "type": "package",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Shergela\\LaravelValidationRule\\": "src"
        }
    },
    "authors": [
        {
            "name": "Avto Shergelashvili",
            "email": "avtoshergelashvili11@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0|^7.4"
    },
    "require-dev": {
        "larastan/larastan": "^2.0",
        "laravel/pint": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "doctrine/coding-standard": "^12.0",
        "nikic/php-parser": "^4.19.1",
        "orchestra/canvas": "^7.11.1 || ^8.11.0 || ^9.0.2",
        "orchestra/testbench": "^7.33.0 || ^8.13.0 || ^9.0.3"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x"
        },
        "laravel": {
            "providers": [
                "Shergela\\LaravelValidationRule\\ShergelaLaravelValidationRuleProvide"
            ]
        }
    },
    "scripts": {
        "qa": [
            "./vendor/bin/phpcs --standard=PSR12 --encoding=utf-8 --colors src/",
            "./vendor/bin/phpstan analyse --memory-limit=2G"
        ]
    }
}
